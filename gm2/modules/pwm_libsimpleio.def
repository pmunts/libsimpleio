DEFINITION MODULE pwm_libsimpleio;

  IMPORT
    Channel;

  TYPE
    Pin;

  CONST
    DUTYCYCLE_MIN = 0.0;
    DUTYCYCLE_MAX = 100.0;

  PROCEDURE Open
   (chip       : CARDINAL;
    channel    : CARDINAL;
    frequency  : CARDINAL;
    dutycycle  : REAL;
    VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE OpenChannel
   (channel    : Channel.Designator;
    frequency  : CARDINAL;
    dutycycle  : REAL;
    VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE Close
   (VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE Write
   (pin        : Pin;
    dutycycle  : REAL;
    VAR error  : CARDINAL);

  PROCEDURE fd(pin : Pin) : INTEGER;

END pwm_libsimpleio.

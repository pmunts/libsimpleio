DEFINITION MODULE I2C_libsimpleio;

  IMPORT
    Channel;

  FROM SYSTEM IMPORT BYTE;

  TYPE
    Bus;

  PROCEDURE Open
   (chip      : CARDINAL;
    channel   : CARDINAL;
    VAR bus   : Bus;
    VAR error : CARDINAL);

  PROCEDURE OpenChannel
   (channel   : Channel.Designator;
    VAR bus   : Bus;
    VAR error : CARDINAL);

  PROCEDURE Close
   (VAR bus   : Bus;
    VAR error : CARDINAL);

  PROCEDURE Transaction
   (bus       : Bus;
    addr      : CARDINAL;
    cmd       : ARRAY OF BYTE;
    cmdlen    : CARDINAL;
    VAR resp  : ARRAY OF BYTE;
    resplen   : CARDINAL;
    VAR error : CARDINAL);

  PROCEDURE Read
   (bus       : Bus;
    addr      : CARDINAL;
    VAR resp  : ARRAY OF BYTE;
    resplen   : CARDINAL;
    VAR error : CARDINAL);

  PROCEDURE Write
   (bus       : Bus;
    addr      : CARDINAL;
    cmd       : ARRAY OF BYTE;
    cmdlen    : CARDINAL;
    VAR error : CARDINAL);

  PROCEDURE fd(bus : Bus) : INTEGER;

END I2C_libsimpleio.

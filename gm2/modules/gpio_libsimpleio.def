DEFINITION MODULE gpio_libsimpleio;

  IMPORT
    Channel;

  TYPE
    Pin;
    Direction = (Input, Output);
    Driver    = (PushPull, OpenDrain, OpenSource);
    Edge      = (None, Rising, Falling, Both);
    Polarity  = (ActiveLow, ActiveHigh);

  PROCEDURE Open
   (chip       : CARDINAL;
    line       : CARDINAL;
    dir        : Direction;
    state      : BOOLEAN;
    driver     : Driver;
    edge       : Edge;
    polarity   : Polarity;
    VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE OpenChannel
   (channel    : Channel.Designator;
    dir        : Direction;
    state      : BOOLEAN;
    driver     : Driver;
    edge       : Edge;
    polarity   : Polarity;
    VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE Close
   (VAR pin    : Pin;
    VAR error  : CARDINAL);

  PROCEDURE Read
   (pin        : Pin;
    VAR state  : BOOLEAN;
    VAR error  : CARDINAL);

  PROCEDURE Write
   (pin        : Pin;
    state      : BOOLEAN;
    VAR error  : CARDINAL);

  PROCEDURE fd(pin : Pin) : INTEGER;

END gpio_libsimpleio.

{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
         {
            "label": "compile",
            "type": "shell",
            "command": "make ${fileBasenameNoExtension}"
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
         }
         {
            "label": "run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "windows": {
               "command": ".\${fileBasenameNoExtension}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
         }
         {
            "label": "clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}

    "version": "2.0.0",
    "tasks": [
         {
            "label": "gprbuild",
            "type": "shell",
            "command": "gprbuild -p ${fileBasenameNoExtension}",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
         }
         {
            "label": "run",
            "type": "shell",
            "command": "./${fileBasenameNoExtension}",
            "windows": {
               "command": ".\${fileBasenameNoExtension}"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
         }
         {
            "label": "make build",
            "type": "shell",
            "command": "make build",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
         }
         {
            "label": "make clean",
            "type": "shell",
            "command": "make clean",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": false
            }
        }
    ]
}

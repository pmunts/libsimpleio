WITH "aws";

LIBRARY PROJECT MCP2221 IS
  LIBSIMPLEIO := external("LIBSIMPLEIO", "/usr/local/share/libsimpleio");
  LIBNAME     := "mcp2221";
  OS          := external("OS", external("OSNAME", "unknown"));
  WINARCH     := external("WINARCH", "win64");

  FOR Externally_Built USE "false";

  FOR Languages    USE ("Ada");

  FOR Library_Name USE LIBNAME;

  FOR Library_Dir  USE LIBSIMPLEIO & "/ada/lib/" & LIBNAME & ".lib";

  FOR Object_Dir   USE LIBSIMPLEIO & "/ada/lib/" & LIBNAME & ".obj";

  FOR Source_Dirs  USE
   (LIBSIMPLEIO & "/ada/bindings",
    LIBSIMPLEIO & "/ada/devices",
    LIBSIMPLEIO & "/ada/interfaces",
    LIBSIMPLEIO & "/ada/objects",
    LIBSIMPLEIO & "/ada/objects/hid");

  -- Exclude certain files on MacOS or Windows

  CASE OS IS
    WHEN "Darwin" | "Windows_NT" =>
      FOR Excluded_Source_Files USE
       ("hid-libsimpleio.ads",
        "hid-libsimpleio.adb",
        "hid-posix.ads",
        "hid-posix.adb",
        "mcp-2221-libsimpleio.ads",
        "mcp-2221-libsimpleio.adb");

    WHEN OTHERS =>
      NULL;
  END CASE;

  -- Linker goop to find hidapi.dll or libhidapi.so

  PACKAGE Linker IS
    CASE OS IS
      WHEN "Darwin" =>
        FOR Default_Switches ("ada") USE
          ("-L/usr/local/lib",
           "-L/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/lib");

      WHEN "Windows_NT" =>
        FOR Default_Switches ("ada") USE
          ("-L" & LIBSIMPLEIO & "/win/" & WINARCH);

      WHEN OTHERS =>
        NULL;
    END CASE;
  END Linker;

END MCP2221;

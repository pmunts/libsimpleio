#!/bin/sh

MULTIARCHLIBDIR=/usr/lib/`gcc -dumpmachine`

if [ -e ${MULTIARCHLIBDIR}/libhidapi-hidraw.a -a -h /usr/local/lib/libhidapi.a ]; then
  rm -f /usr/local/lib/libhidapi.a
fi

if [ -e ${MULTIARCHLIBDIR}/libhidapi-hidraw.so -a -h /usr/local/lib/libhidapi.so ]; then
  rm -f /usr/local/lib/libhidapi.so
  rm -f /usr/local/lib/libhidapi-hidraw.so.0
fi

rm -f /usr/local/include/libsimpleio

ldconfig
